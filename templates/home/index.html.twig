{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}


<header>
    <div class="d-flex flex-column vh-100">
        <div class="text-center p-1 w-50 m-auto">
            <img src="img/logo_dsides_noir.png" alt="logo" class="img-fluid">
        </div>
        <div class="text-center">
            <i class="bi bi-arrow-down"></i>
        </div>
    </div>
</header>
<main>

    <div class="container-fluid">
        <div class="row g-3">

            {% for project in projects|filter(project => project.isDisplayed) %}

            {% if (project.displayOrder < 3) %}

            <div class="img_container" style="position: relative; text-align: center; color: white;">
                <img src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter('w1600') }}" class=""
                    alt="{{ project.name }}" style="width: 100%; height: 300px; object-fit: cover;">
                <div class="centered"
                    style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                    {{ project.name }} <br>
                    {{ project.client.name }}
                </div>
            </div>

            {% endif %}

            

